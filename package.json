{
	"name": "iracing-screenshot-tool",
	"productName": "iRacing Screenshot Tool",
	"version": "0.0.1-1",
	"description": "A tool for taking screenshots in iRacing",
	"license": "MIT",
	"repository": "svglol/iracing-screenshot-tool",
	"author": {
		"name": "Matthew",
		"email": "savageguy@gmail.com",
		"url": "github.com/svglol"
	},
	"scripts": {
		"postinstall": "electron-builder install-app-deps",
		"lint": "xo",
		"test": "npm run lint",
		"start": "electron .",
		"pack": "electron-builder --dir",
		"dist": "electron-builder --windows",
		"release": "np"
	},
	"dependencies": {
		"electron-context-menu": "^0.15.0",
		"electron-debug": "^3.0.0",
		"electron-store": "^5.1.0",
		"electron-unhandled": "^3.0.0",
		"electron-updater": "^4.0.6",
		"electron-util": "^0.13.0",
		"ffi-napi": "^2.4.7",
		"image-size": "^0.8.3",
		"jimp": "^0.9.6",
		"jquery": "^3.4.1"
	},
	"devDependencies": {
		"electron": "^7.1.1",
		"electron-builder": "^21.2.0",
		"np": "^5.0.3",
		"xo": "^0.25.3"
	},
	"xo": {
		"envs": [
			"node",
			"browser"
		],
		"ignores": [
			"node-irsdk",
			"screenshot.js"
		]
	},
	"np": {
		"publish": false,
		"releaseDraft": false
	},
	"build": {
		"appId": "com.svglol.iracingscreenshottool",
		"win": {
			"icon": "build/icon.png",
			"target": "nsis"
		}
	}
}
