{
	"name": "iracing-screenshot-tool",
	"productName": "iracing screenshot tool",
	"version": "0.0.0",
	"description": "A tool for taking screenshots in iRacing",
	"license": "MIT",
	"repository": "svglol/iracing-screenshot-tool",
	"author": {
		"name": "Matthew",
		"email": "savageguy@gmail.com",
		"url": "github.com/svglol"
	},
	"scripts": {
		"postinstall": "electron-builder install-app-deps",
		"lint": "xo",
		"test": "",
		"start": "electron .",
		"pack": "electron-builder --dir",
		"dist": "electron-builder --windows",
		"release": "np",
		"postinstall": "electron-builder install-app-deps"
	},
	"dependencies": {
		"electron-context-menu": "^0.15.0",
		"electron-debug": "^3.0.0",
		"electron-store": "^5.1.0",
		"electron-unhandled": "^3.0.0",
		"electron-updater": "^4.0.6",
		"electron-util": "^0.13.0",
		"ffi-napi": "^2.4.7",
		"robotjs": "^0.6.0",
		"screenz": "^1.0.0",
		"wmic-sys-info": "^0.1.3"
	},
	"devDependencies": {
		"electron": "^7.1.1",
		"electron-builder": "^21.2.0",
		"np": "^5.0.3",
		"xo": "^0.25.3"
	},
	"xo": {
		"envs": [
			"node",
			"browser"
		],
		"ignores": [
			"node-irsdk"
		]
	},
	"np": {
		"publish": false,
		"releaseDraft": false
	},
	"build": {
		"appId": "com.svglol.iracingscreenshottool",
		"win": {
      "icon" : "build/icon.png",
      "target": ["portable"]
    }
	}
}
